// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String    @default("")
  email         String    @unique
  emailVerified DateTime?
  image         String?
  phone         String?
  password      String
  role          String    @default("USER")
  accounts      Account[]
  sessions      Session[]
  boats         Boat[]
  bookings      Booking[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Boat {
  id          String    @id @default(cuid())
  name        String
  description String
  imageUrl    String?
  media       Media[]  // Adicionado relacionamento com mídia
  capacity    Int
  location    String
  price       Float
  rating      Float    @default(0)
  category    String
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  amenities   Amenity[]
  bookings    Booking[]
  available   Boolean   @default(true)
  length      Float     @default(0)
  year        Int       @default(2024)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Amenity {
  id        String   @id @default(cuid())
  name      String
  iconName  String   @unique
  boats     Boat[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Media {
  id        String   @id @default(cuid())
  url       String
  type      String   // "IMAGE" ou "VIDEO"
  publicId  String?  @default("") // ID público do Cloudinary
  order     Int      @default(0)  // Ordem da mídia na galeria
  boat      Boat     @relation(fields: [boatId], references: [id])
  boatId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum BookingStatus {
  PENDENTE
  CONFIRMADO
  CANCELADO
  CONCLUIDO
}

model Booking {
  id         String        @id @default(cuid())
  startDate  DateTime
  endDate    DateTime
  totalPrice Float
  guests     Int          @default(1)
  status     BookingStatus @default(PENDENTE)
  userId     String
  user       User          @relation(fields: [userId], references: [id])
  boatId     String
  boat       Boat          @relation(fields: [boatId], references: [id])
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}
